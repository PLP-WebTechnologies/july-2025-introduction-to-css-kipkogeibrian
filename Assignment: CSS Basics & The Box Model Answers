/* Box Model Visualization */
.card {
    /* This border shows the card boundary */
    border: 1px solid #ddd;
    
    /* Padding creates space inside the card */
    padding: 20px;
    
    /* Margin creates space between cards */
    margin-bottom: 20px;
    
    /* Content width is calculated with box-sizing: border-box */
    width: 100%;
}

